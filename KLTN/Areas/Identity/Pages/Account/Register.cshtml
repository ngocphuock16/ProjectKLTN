@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-header box-shadow">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="brand-logo">
            @* <a href="login.html">
                    <img src="~/wwwroot/vendors/images/tech.jpg" alt="">
                </a>*@
        </div>
        <div class="login-menu">
            <ul>
                <a asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            </ul>
        </div>
    </div>
</div>
<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-7">
                <img src="~/adminJS/vendors/images/login-page-img.png" alt="">
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="login-box bg-white box-shadow border-radius-10">
                    <div class="login-title">
                        <h2 class="text-center text-primary">Đăng ký tài khoản</h2>
                    </div>

                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div class="input-group custom">
                            Email
                            <div class="input-group custom">
                                <input asp-for="Input.Email" class="form-control" />
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
                                </div>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                       
                        <div class="input-group custom">
                            Mật khẩu
                            <div class="input-group custom">
                                <input asp-for="Input.Password" class="form-control" />
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                                </div>
                             </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                        <div class="input-group custom">
                            Nhập lại mật khẩu
                            <div class="input-group custom">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                                </div>
                            </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="input-group mb-0">
                                        <input class="btn btn-danger btn-lg btn-block" type="submit" name="submit" value="Đăng Ký">

                                    </div>
                                    <div class="font-16 weight-600 pt-10 pb-10 text-center" data-color="#707373">Hoặc đã có tài khoản?</div>
                                    <div class="text-center">
                                        <a asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                                    </div>

                                </div>
                            </div>
</form>
                </div>
                </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}