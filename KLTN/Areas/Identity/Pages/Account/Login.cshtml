@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

@{
    ViewData["Title"] = "Log in";
}

<div class="login-header box-shadow">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="brand-logo">
            @* <a href="login.html">

                </a>*@
        </div>
        @* Dang ky*@
       @* <div class="login-menu">
            <ul>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
            </ul>
        </div>*@
    </div>
</div>
<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-7">
                <img src="~/adminJS/vendors/images/login-page-img.png" alt="">
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="login-box bg-white box-shadow border-radius-10">
                    <div class="login-title">
                        <h2 class="text-center text-primary">Đăng nhập vào hệ thống</h2>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group custom">
                            Email &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input asp-for="Input.Email" class="form-control" />
                            @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                            <div class="input-group-append custom">
                                <span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
                            </div>
                        </div>
                        <div class="input-group custom">
                            Mật khẩu &nbsp;
                            <input asp-for="Input.Password" class="form-control" />
                            @* <span asp-validation-for="Input.Password" class="text-danger"></span>*@
                            <div class="input-group-append custom">
                                <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="input-group mb-0">
                                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="Đăng nhập">
                                </div>
                                @* dang ky*@
                                @*<div class="font-16 weight-600 pt-10 pb-10 text-center" data-color="#707373">Hoặc</div>
                                <div class="text-center">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
                                </div>*@

                            </div>
                        </div>
                    </form>
</div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
