@{ Layout = "~/Views/Shared/_LayoutDashBoard.cshtml"; }
@model IEnumerable<Contact>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh sách Hỗ trợ</h2>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%" id="tbCategory">
            <thead>
                <tr>
                    <th>
                        Họ tên
                    </th>
                    <th>
                        Địa chỉ Email
                    </th>
                    <th>
                        Nội dung hỗ trợ
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%">
                            @item.FullName
                        </td>
                        <td width="20%">
                            @item.Email
                        </td>
                        <td width="60%">
                            @item.SupportContent
                        </td>
                        @*
                            <td>
                               <div>
                                  <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                  <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                               </div>
                            </td>
                        *@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Danh sách hỗ trợ trống</p>
    }
</div>
@section Scripts{
    <script src="~/js/category.js" asp-append-version="true"></script>
}
