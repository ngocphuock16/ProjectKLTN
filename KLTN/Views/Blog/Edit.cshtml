@model BlogCreateVM
@{ Layout = "~/Views/Shared/_LayoutDashBoard.cshtml"; }

<form method="post" enctype="multipart/form-data">
    <input hidden asp-for="Blog.Id" />
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-danger">Chỉnh sửa bài viết</h2>
        </div>
        <div class="row">
            <div class="col-10">
                <div class="row form-group">
                    <div class="col-4">
                        <label>Tiêu đề</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Blog.Title" class="form-control" />
                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label>Ngày xuất bản</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Blog.PublishDate" class="form-control" />
                        <span asp-validation-for="Blog.PublishDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label>Nội dung ngắn</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Blog.ShortContent" class="form-control"></textarea>
                        <span asp-validation-for="Blog.ShortContent" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label>Nội dung đầy đủ</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Blog.FullContent" class="form-control"></textarea>
                        <span asp-validation-for="Blog.FullContent" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        Hình ảnh
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" value="" class="form-control" id="uploadBox" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4"></div>
                    <div class="col-8">
                        <img src="@CommonDefault.ImagePath@Model.Blog.Image" width="50%" style="boder-radius: 10px; border: 1px solid #ff6a00" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label>Thể loại</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Blog.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label>Thẻ bài viết</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.SelectListTagIds" asp-items="@Model.TagSelectList" class="form-control" multiple>
                        </select>
                        <span asp-validation-for="Blog.BlogTags" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <input type="submit" value="Xác nhận" class="btn btn-primary" />
                    </div>
                    <div class="col-md-4">
                        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>