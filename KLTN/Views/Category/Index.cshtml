@model IEnumerable<Category>
@{ Layout = "~/Views/Shared/_LayoutDashBoard.cshtml"; }
<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh sách thể loại</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Thêm thể loại mới
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%" id="tbCategory">
            <thead>
                <tr>
                    <th>
                        Tên thể loại
                    </th>
                    <th>
                        Số lượng bài viết
                    </th>
                    <th>
                        Hành động
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%">
                            @category.CategoryName
                        </td>
                        <td width="20%">
                            @category.Blogs.Count
                        </td>
                        <td>
                            <div>
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Danh sách thể loại trống</p>
    }
</div>
@section Scripts{
    <script src="~/js/category.js" asp-append-version="true"></script>
}